{
  "name": "npm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.sass js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:*  test",
    "build:clean": "rimraf css/*.css",
    "build:sass": "node-sass --output-style nested -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch": "npm-run-all build -p watch:sassprefixer -p watch:browsersync",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css sass ",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o  css/style.css css/style.css",
    "watch:browsersync": "browser-sync start --server --files 'css/*.css' '*.html' --watch 'css/*.css' '*.html'",
    "watch:sassprefixer": "onchange -d 100 sass/style.sass -- npm-run-all watch:sass -p watch:autoprefixer"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.2",
    "globstar": "^1.0.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.0.0"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  }
}
